<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EverNote" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/purple</item>
        <item name="android:statusBarColor">@color/gray_light</item>
    </style>

    <style name="Theme.EverNote" parent="Base.Theme.EverNote" />
    
    <style name="MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenBackground">#E3E5E5</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.EverNote</item>
    </style>
</resources>